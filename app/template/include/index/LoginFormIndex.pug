// LOGIN FORM
.login_reg-wrapper.row.animated.fadeIn
	.login-form.autoriz
		h5 LOG IN
		.clearfix
		p.title Already have an account?<br>Log In it!
		form.site-form
			.row
				.col-md-12
					.input-group
						input.form-control(type='email', name='email', placeholder='E-mail', required)
						span.input-group-addon
							span.glyphicon.glyphicon-envelope
			.row
				.col-md-12
					.error-message.text-danger This field is required
					.input-group
						input.form-control(type='password', name='pass', placeholder='Password', required)
						span.input-group-addon
							span.glyphicon.glyphicon-lock

			button.btn.btn-default(type='submit') LOG IN
			a.link-default(data-toggle='modal', data-target='.forget-modal') I FORGOT MY PASSWORD
			input(type='hidden', name='fast', value='1')
		.bottom-toggle-block
			a(onclick='login_reg_tooggle()') CREATE NEW ACCOUNT	

	.login-form.registretion.hide
		h5
			.online_count_label FREE
			|REGISTRATION
		.clearfix
		p.title Do you have an account?<br>No? Letâ€™s create a new one!
		form.site-form
			input(type='hidden', name='pass', value='WfDjrfUsIl')
			input(type='hidden', name='pass2', value='WfDjrfUsIl')
			.row
				.col-md-12
					.input-group
						input.form-control(type='text', name='name', placeholder='Your name', required)
						span.input-group-addon
							span.glyphicon.glyphicon-user
			.row
				.col-md-12
					.input-group
						input.form-control(type='email', name='email', placeholder='Your email here', required)
						span.input-group-addon
							span.glyphicon.glyphicon-envelope

			button.btn.btn-default(type='submit') CREATE AN ACCOUNT
		.bottom-toggle-block
			a(onclick='login_reg_tooggle()') LOG IN TO MY ACCOUNT
	.bottom-toggle-block.mobile
			a(onclick='login_reg_tooggle()') CREATE NEW ACCOUNT
	.clearfix
